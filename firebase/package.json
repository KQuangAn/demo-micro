{
  "name": "firebase-stack",
  "version": "1.0.0",
  "description": "Complete Firebase stack example with TypeScript, Auth, Firestore, Realtime DB, and Cloud Functions",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "functions:build": "cd functions && npm run build",
    "functions:serve": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy",
    "emulators:start": "firebase emulators:start",
    "emulators:exec": "firebase emulators:exec"
  },
  "keywords": [
    "firebase",
    "typescript",
    "firestore",
    "realtime-database",
    "cloud-functions",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase": "^10.13.2",
    "firebase-admin": "^12.6.0",
    "dotenv": "^16.4.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "firebase-tools": "^13.20.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}

